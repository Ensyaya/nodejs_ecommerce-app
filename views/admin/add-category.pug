extends ../layouts/main-layout.pug

block content
    form(action="/admin/add-category" method="POST")
        .form-group.row
            input(type="hidden" name="_csrf" value=`${csrfToken}`)
            label(for="name").col-sm-2.col-form-label Name
            .col-sm-10
                input.form-control#name(type="text" name="name")

        .form-group.row
            label(for="description").col-sm-2.col-form-label Description
            .col-sm-10
                textarea.form-control(name="description" cols="90" rows="3")

        .form-group.row
            .col-sm-10.offset-sm-2
                input(type="submit" value="Save Category").btn.btn-primary   